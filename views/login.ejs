
<h1><%- title %></h1>
<%- messages() %>
<form action="/categories" method="POST">
    <label>Email:</label><br>
    <input type="email" name="email" required placeholder="Enter a valid email address" value="<%= locals.email %>"><br><br>
    
    <label>Password:</label><br>
    <input type="password" name="pass" required value="<%= locals.pass %>"><br><br>
    
    <button type="submit" class="btn">Login</button>
  </form>

  <p>Don't have an account? <a href="/register">Register here</a></p>